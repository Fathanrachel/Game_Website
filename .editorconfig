# File .editorconfig

# Aturan umum
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Aturan untuk berkas HTML
[*.html]
indent_size = 2

# Aturan untuk berkas CSS
[*.css]
indent_size = 2

# Aturan untuk berkas JavaScript
[*.js]
indent_size = 2
max_line_length = 120
